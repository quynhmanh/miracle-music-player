{
	"manifest_version": 2,
	
	"name": "Miracle Music Player",
	
	"version": "0.0.1",
	
	"description": "Search and play music instanly",
	
	"permissions": ["http://*.mp3.zing.vn/**/*", "<all_urls>", "tabs"],
	
	"background": {"page": "templates/background.html", "script": "scripts/background/background_main.js"},
	
	"browser_action": {
		"default_popup": "templates/popup.html",
		"default_icon": "images/icon-38.png"
	},
	
	"icons": {
		"16": "images/icon-16.png",
		"19": "images/icon-19.pngs",
		"38": "images/icon-38.png",
		"128": "images/icon-128.png"
	},
	
	"content_security_policy": "script-src 'self' 'unsafe-eval' https://s.ytimg.com/yts/jsbin/ https://www.youtube.com/ https://ssl.google-analytics.com/ http://localhost; object-src 'self'"
}